
---
import "../styles/global.css";
const { title = "Dor Shem Tov — Game Designer" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <header class="border-b border-white/10 bg-black/40 backdrop-blur">
      <nav class="max-w-5xl mx-auto flex h-16 items-center justify-between px-4">
        <a href="/" class="text-xl font-bold text-accent">Dor Shem Tov</a>
        <div class="flex gap-6 text-sm">
          <a href="/projects" class="hover:text-accent">Projects</a>
          <a href="/resume" class="hover:text-accent">Resume</a>
          <a href="/portfolio" class="hover:text-accent">Portfolio</a>
          <a href="/contact" class="hover:text-accent">Contact</a>
        </div>
      </nav>
    </header>

    <main class="max-w-5xl mx-auto px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-white/10 text-neutral-500 text-sm py-6 text-center">
      © {new Date().getFullYear()} Dor Shem Tov
    </footer>
  </body>
</html>
